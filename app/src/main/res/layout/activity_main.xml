<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ana_ekran_arkaplan"
    tools:context=".MainActivity"




    >

    <TextView
        android:id="@+id/carGo_text"
        android:layout_width="146dp"
        android:layout_height="81dp"
        android:fontFamily="@font/sfproregular"
        android:text="car-Go"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@+id/carGo_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/girisyap_image"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:onClick="girisYap"
        app:layout_constraintBottom_toTopOf="@+id/kayitol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carGo_text"
        app:srcCompat="@drawable/giris_yap_buton" />

    <Button
        android:id="@+id/kayitol"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="133dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/sfproregular"
        android:text="Kayıt ol"
        android:onClick="kayitOl"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:circularflow_radiusInDP="30"
        app:cornerRadius="38dp"
        app:layout_constraintBottom_toTopOf="@+id/sifremiunuttum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisyap_image" />

    <Button
        android:id="@+id/sifremiunuttum"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:background="#00C16C6C"
        android:text="Şifremi unuttum"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/girisyap"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:background="#00FF0000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />


</androidx.constraintlayout.widget.ConstraintLayout>